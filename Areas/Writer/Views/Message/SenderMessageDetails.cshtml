@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "SenderMessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}



<h2>Mesaj Detayları</h2>
<form class="form-group">

    @Html.HiddenFor(x => x.MessageID, new { @disabled = "disabled", @class = "form-control" })

    @Html.Label("Alıcı:")
    @Html.TextBoxFor(x => x.ReceiverName, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.Label("Alıcı Mail:")
    @Html.TextBoxFor(x => x.ReceiverMail, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.Label("Mesaj:")
    @Html.TextAreaFor(x => x.MessageContent, 10, 3, new { @class = "form-control", @readonly = "readonly" })
</form>

