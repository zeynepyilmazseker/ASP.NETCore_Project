@model Core_Project.Areas.Writer.Models.UserChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Şifre Değiştir</h4>
            <form class="forms-sample" method="Post">
                <div class="form-group">
                    <label >Şifreniz</label>
                    <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword4" placeholder="Şifre">
                </div>
                <div class="form-group">
                    <label >Şifre Tekrar</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" id="exampleInputPassword4" placeholder="Şifre tekrar">
                </div>
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>


