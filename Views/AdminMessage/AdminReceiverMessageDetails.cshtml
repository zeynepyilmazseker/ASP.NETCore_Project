@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminReceiverMessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar-Admin Gelen Kutusu</h4>
            <form class="form-group">
                @Html.HiddenFor(x => x.MessageID, new { @disabled = "disabled", @class = "form-control" })
                @Html.Label("Gönderen:")
                @Html.TextBoxFor(x => x.SenderName, new { @class = "form-control", @readonly = "readonly" })
                <br />
                @Html.Label("Gönderen Mail:")
                @Html.TextBoxFor(x => x.SenderMail, new { @class = "form-control", @readonly = "readonly" })
                <br />
                @Html.Label("Mesaj:")
                @Html.TextAreaFor(x => x.MessageContent, 10, 3, new { @class = "form-control", @readonly = "readonly" })
            </form>
            <a href="/AdminMessage/ReceiverMessageList/" class="btn btn-primary btn-sm">Mesajlara Dön</a>
        </div>
    </div>
</div>



