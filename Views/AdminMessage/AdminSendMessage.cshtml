@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "AdminSendMessage";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gelen Kutusu</h4>
            <form class="form-group" method="post">

                @Html.Label("Alıcı Ad Soyad:")
                @Html.TextBoxFor(x => x.ReceiverName, new { @class = "form-control" })
                <br />
                @Html.Label("Alıcı Mail:")
                @Html.TextBoxFor(x => x.ReceiverMail, new { @class = "form-control" })
                <br />
                @Html.Label("Konu:")
                @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                <br />
                @Html.Label("Mesaj:")
                @Html.TextAreaFor(x => x.MessageContent, 10, 3, new { @class = "form-control" })
                <br />
                <button class="btn btn-primary btn-sm">Gönder</button>

            </form>

        </div>
    </div>
</div>


