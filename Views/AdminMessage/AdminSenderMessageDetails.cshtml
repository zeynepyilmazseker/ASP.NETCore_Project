@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminSenderMessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar-Admin Giden Kutusu</h4>
            <form class="form-group">

                @Html.HiddenFor(x => x.MessageID, new { @disabled = "disabled", @class = "form-control" })

                @Html.Label("Alıcı:")
                @Html.TextBoxFor(x => x.ReceiverName, new { @class = "form-control", @readonly = "readonly" })
                <br />
                @Html.Label("Alıcı Mail:")
                @Html.TextBoxFor(x => x.ReceiverMail, new { @class = "form-control", @readonly = "readonly" })
                <br />
                @Html.Label("Mesaj:")
                @Html.TextAreaFor(x => x.MessageContent, 10, 3, new { @class = "form-control", @readonly = "readonly" })
            </form>
            <a href="/AdminMessage/SenderMessageList/" class="btn btn-primary btn-sm">Mesajlara Dön</a>
        </div>
    </div>
</div>




