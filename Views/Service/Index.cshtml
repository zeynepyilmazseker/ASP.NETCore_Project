@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Hizmet Listesi</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">ID</th>
                <th scope="col" class="sort" data-sort="budget">Başlık</th>
                <th scope="col" class="sort" data-sort="status">Görsel Yolu</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>

            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody class="list">
                <tr>
                    <th scope="row">
                        <div class="media align-items-center">

                            <div class="media-body">
                                <span class="name mb-0 text-sm">@item.ServiceID</span>
                            </div>
                        </div>
                    </th>
                    <td class="budget">
                        @item.Title
                    </td>
                    <td>
                        <span class="badge badge-dot mr-4">
                            <i class="bg-warning"></i>
                            <span class="status">@item.ImageUrl</span>
                        </span>
                    </td>


                    <td scope="row">
                        <div class="media align-items-center">

                            <div class="media-body">
                                <span class="name mb-0 text-sm"><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Sil</a></span>
                            </div>
                        </div>
                    </td>
                    <td scope="row">
                        <div class="media align-items-center">

                            <div class="media-body">
                                <span class="name mb-0 text-sm"><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-warning">Güncelle</a></span>
                            </div>
                        </div>
                    </td>
                </tr>



            </tbody>
        }
    </table>
    <br />
    <a href="/Service/AddService" class="btn btn-primary">Yeni Servis Ekle</a>
</div>



