@using EntityLayer.Concrete
@model List<Portfolio>

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Proje Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    <div class="form-check form-check-muted m-0">
                                        <label class="form-check-label">
                                            <input type="checkbox" class="form-check-input">
                                        </label>
                                    </div>
                                </th>
                                <th>Görsel</th>
                                <th>Proje ID</th>
                                <th> Name </th>
                                <th> Price</th>
                                <th> Platform </th>
                                <th>Value </th>
                                <th>Status</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="form-check form-check-muted m-0">
                                            <label class="form-check-label">
                                                <input type="checkbox" class="form-check-input">
                                            </label>
                                        </div>
                                    </td>
                                    <td>
                                        <img src="@item.ImageUrl" alt="image" />

                                    </td>
                                    <td> @item.PortfolioID</td>
                                    <td> @item.Name </td>
                                    <td> @item.Price </td>
                                    <td>
                                        <img src="@item.Platform" alt="image" />

                                    </td>
                                    <td> %@item.Value </td>
                                    <td>
                                        @if (@item.Status)
                                        {
                                            <div class="badge badge-outline-success">@item.Status</div>
                                        }
                                        else
                                        {
                                        <div class="badge badge-outline-danger">@item.Status</div>
                                        }

                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

