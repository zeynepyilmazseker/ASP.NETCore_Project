@model EntityLayer.Concrete.Testimonial

@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("AddTestimonial", "Testimonial", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Referans Ekleme Sayfası</h4>

                <form class="forms-sample">
                    <div class="form-group">
                        <label >İsim</label>
                        @Html.TextBoxFor(x => x.ClientName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Şirket adı</label>
                        @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Yorum</label>
                        @Html.TextBoxFor(x => x.Comment, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>

                </form>
            </div>
        </div>
    </div>

}


