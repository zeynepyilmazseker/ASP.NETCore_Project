@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar-Admin Giden Kutusu</h4>
            <form class="form-group">

                @Html.HiddenFor(x => x.TestimonialID, new { @disabled = "disabled", @class = "form-control" })

                @Html.Label("Alıcı:")
                @Html.TextBoxFor(x => x.ClientName, new { @class = "form-control", @readonly = "readonly" })
                <br />
                @Html.Label("Alıcı Mail:")
                @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control", @readonly = "readonly" })
                <br />
                @Html.Label("Mesaj:")
                @Html.TextAreaFor(x => x.Comment, 10, 3, new { @class = "form-control", @readonly = "readonly" })
            </form>
            <a href="/Testimonial/Index/" class="btn btn-primary btn-sm">Referanslara Dön</a>
        </div>
    </div>
</div>



