@using EntityLayer.Concrete
@model List<Testimonial>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Referanslar</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    <div class="form-check form-check-muted m-0">
                                        <label class="form-check-label">
                                            <input type="checkbox" class="form-check-input">
                                        </label>
                                    </div>
                                </th>
                                <th> ID </th>
                                <th> Müşteri Adı </th>
                                <th> Şirket Adı </th>
                                <th>Durum</th>
                                <th>Detaylar</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="form-check form-check-muted m-0">
                                            <label class="form-check-label">
                                                <input type="checkbox" class="form-check-input">
                                            </label>
                                        </div>
                                    </td>
                                    <td>@item.TestimonialID</td>
                                    <td>
                                        <img src="@item.ImageUrl" alt="image" />
                                        <span class="pl-2">@item.ClientName</span>
                                    </td>
                                    <td> @item.CompanyName </td>
                                    <td>
                                        <div class="badge badge-outline-success">Approved</div>
                                    </td>
                                    <td><a href="/Testimonial/Details/@item.TestimonialID" class="btn btn-info btn-sm">Detayları Görüntüle</a></td>
                                    <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-danger btn-sm">Sil</a></td>
                                    <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-warning btn-sm">Güncelle</a></td>

                                </tr>

                            }
                       
                        </tbody>
                    </table>
                    <br />
                    <a href="/Testimonial/AddTestimonial/" class="btn btn-success btn-sm">Yeni Referans Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>


