@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "TAGHELPERILEFORM";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<h1>TAGHELPERILEFORM</h1>

<form class="form-sample" asp-action="AddTestimonial" method="post">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Referans Ekleme Sayfası</h4>
                <div class="form-group">
                    <label>İsim</label>
                    <input type="text" asp-for="@Model.ClientName" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Şirket adı</label>
                    <input type="text" asp-for="@Model.CompanyName" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Yorum</label>
                    <input type="text" asp-for="@Model.Comment" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
            </div>
        </div>
    </div>
</form>
